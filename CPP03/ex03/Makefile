NAME = prog
SRCS = main.cpp \
       ClapTrap.cpp \
       ScavTrap.cpp \
       FragTrap.cpp \
       DiamondTrap.cpp \

OBJS = $(SRCS:.cpp=.o)

CC = c++
CFLAGS = -Wall -Werror -Wextra -std=c++98 -g -Wshadow -Wno-shadow

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJS)

fclean:	clean
	rm -rf $(NAME)

re:	fclean all

run: all
	@./$(NAME)

.PHONY: all clean fclean re
